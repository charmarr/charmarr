{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 9am on monday"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on monday"]
  },
  "packageRules": [
    {
      "description": "Group all Python dependencies",
      "matchManagers": ["pep621", "uv"],
      "groupName": "python dependencies"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "description": "Group Terraform provider updates",
      "matchManagers": ["terraform"],
      "groupName": "terraform providers"
    },
    {
      "description": "Group OCI image updates per charm",
      "matchManagers": ["regex"],
      "matchFileNames": ["charms/*/charmcraft.yaml"],
      "groupName": "charm oci images"
    },
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Do not automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["charms/.*/charmcraft\\.yaml$"],
      "matchStrings": [
        "upstream-source:\\s*(?<depName>[^:]+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
